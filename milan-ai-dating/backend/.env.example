# Milan AI - Environment Configuration

# Application
APP_NAME="Milan AI"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# Security (Change in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://milan_user:milan_password@localhost:5432/milan_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Vector DB (FAISS)
FAISS_INDEX_PATH=./data/faiss_index
EMBEDDING_DIMENSION=1536

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-your-anthropic-api-key
DEFAULT_LLM_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-3-small
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# File Storage (MinIO/S3)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=milan-ai
MAX_UPLOAD_SIZE_MB=10

# Payment Gateways (Nepal)
KHALTI_PUBLIC_KEY=your-khalti-public-key
KHALTI_SECRET_KEY=your-khalti-secret-key
ESEWA_MERCHANT_ID=your-esewa-merchant-id
ESEWA_SECRET_KEY=your-esewa-secret-key

# SMS Gateway
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=MilanAI

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# AI Agent Settings
AGENT_TIMEOUT_SECONDS=30
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=1.0

# Safety & Moderation
TOXICITY_THRESHOLD=0.7
NSFW_THRESHOLD=0.8
AUTO_MODERATION_ENABLED=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# WebSocket
WS_HEARTBEAT_INTERVAL=30
